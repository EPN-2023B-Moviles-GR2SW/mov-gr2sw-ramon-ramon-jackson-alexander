<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_proximo_viaje"
    android:layout_marginStart="20dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_img_proximo_viaje"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/img_grupos_grandes"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_grupos_grandes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_img_proximo_viaje"
            android:layout_marginTop="20dp"
            android:text="Para grupos grandes â†’"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_grupos_grandes_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_grupos_grandes"
            android:layout_marginTop="4dp"
            android:text="Espacio para todo el grupo y el equipaje"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>