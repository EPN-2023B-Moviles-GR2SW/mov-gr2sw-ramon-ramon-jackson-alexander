<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_product_crud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CellphonesCrud">

    <Button
        android:id="@+id/btn_save_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

    <TextView
        android:id="@+id/txtV_Product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/input_id_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese el id"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_name_p"
        app:layout_constraintEnd_toEndOf="@+id/input_name_p"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_name_p" />

    <EditText
        android:id="@+id/input_name_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_price_p"
        app:layout_constraintEnd_toEndOf="@+id/input_price_p"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_price_p" />

    <EditText
        android:id="@+id/input_price_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Ingrese el precio"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_stock_p"
        app:layout_constraintEnd_toEndOf="@+id/input_stock_p"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_stock_p" />

    <EditText
        android:id="@+id/input_stock_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Ingrese la cantidad"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_product"
        app:layout_constraintEnd_toEndOf="@+id/btn_save_product"
        app:layout_constraintStart_toStartOf="@+id/btn_save_product" />
</androidx.constraintlayout.widget.ConstraintLayout>