<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Perfil"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_buscar"
        card_view:cardBackgroundColor="@color/c4"
        card_view:cardCornerRadius="40dp"
        card_view:contentPadding="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/img_buscar"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/search_24"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_buscar_en_mc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Buscar en MercadoClic"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/img_buscar"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nombre"
        android:layout_marginTop="100dp"
        android:text="Tu nombre público"
        android:textColor="@color/c2"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_descripcion"
        android:layout_marginTop="260dp"
        android:text="Descripción"
        android:textColor="@color/c2"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/et_descripcion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_direccion"
        android:layout_marginTop="420dp"
        android:text="Dirección"
        android:textColor="@color/c2"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/et_direccion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="580dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notificacion"
            android:layout_marginTop="15dp"
            android:text="Tu información pública será visible en tu página de perfil público. Nunca
            compartiremos lo que navegas o compras en MercadoClic."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="35dp"
            android:justificationMode="inter_word"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="90dp"
            android:text="Guardar"
            android:textColor="@color/c4"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="@color/c4"
            android:layout_marginTop="90dp"
            android:layout_marginStart="200dp"
            />


    </RelativeLayout>

</FrameLayout>